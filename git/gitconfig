[user]
  name  = Steven Yang
  email = stv.yang10@gmail.com

[core]
  pager = diff-so-fancy | less --tabs=4 -R

[color]
  ui = true

[color "diff"]
  meta = "yellow"
  frag = "magenta bold"
  commit = "yellow bold"
  old = "red bold"
  new = "green bold"
  whitespace = "red reverse"

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[alias]
  a     = add
  b     = branch
  cm    = commit -m
  ca    = !git add -A && git commit -m
  cl    = clean -f
  co    = checkout
  cob   = checkout -b
  com   = checkout master
  d     = diff
  dc    = diff --cached       # diff on staging area
  l     = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)- %an%Creset' 
  p     = push
  po    = push origin
  pom   = push origin master
  pl    = pull
  plo   = pull origin
  plom  = pull origin master
  rs    = reset
  rsh   = reset --hard
  rv    = revert
  rb    = rebase
  rbm   = rebase master
  s     = status -s
  t     = tag
  u     = reset HEAD          # unstage
  pop   = stash pop
